#footer-post
  position: fixed
  right: 0
  bottom: 0
  left: 0
  z-index: 5000000
  width: 100%
  //border-top: 1px solid $color-border
  background: $color-footer-mobile-1
  transition: opacity .2s
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.05)

  a
    background: none
    color: inherit
    text-decoration: none

  a.icon
    background: none

    &:hover
      color: $color-link

  #nav-footer
    padding: 5px 1rem
    background: $color-footer-mobile-2
    text-align: center

    a
      color: $color-accent-1
      font-size: 1em

    a:hover
      underline(5px, $color-accent-1)

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 0 10px
        width: 20%
        vertical-align: middle

  #actions-footer
    overflow: auto
    padding: 0
    width: 100%
    text-align: center
    white-space: nowrap
    //border-top: 1px solid #999
    box-shadow: 0 -5px 5px rgba(0,0,0,0.05)

    a
      display: inline-block
      padding: 5px 0 5px .5rem
      color: $color-accent-1
      &:first-child
        padding-left: 0

  #share-footer
    box-shadow: 0 -3px 5px rgba(0,0,0,0.05)
    padding: 0px 1rem 
    background: $color-footer-mobile-2
    text-align: center

    .social-share
      a.icon.social-share-icon.icon-wechat
        display: none
    
      .wechat-qrcode
        display: none

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 10px
        width: 15%
        vertical-align: middle

      a
        display: inline-table
        padding: 9px 10px
        width: 15%
        vertical-align: middle

  #toc-footer
    box-shadow: 0 -2px 5px rgba(0,0,0,0.05)
    clear: both
    padding-top: 1rem
    padding-bottom: 1rem
    background: $color-footer-mobile-2
    text-align: left

    a.active
      color: $color-link
      text-shadow: 2px 3px 0 rgba(44,115,40,0.06);
      box-shadow: 0 1px 0 rgba(43,80,29,0.25);
      transition: all 0.05s;
    
    ol
      margin: 0
      padding-left: 20px
      list-style-type: none

      li
        line-height: 1.785

    a:hover
      color: $color-link
      text-shadow: 2px 3px 0 rgba(44,115,40,0.06);
      box-shadow: 0 1px 0 rgba(43,80,29,0.25);
      transition: all 0.05s;

    .toc-level-1 > .toc-link
      display: none

    .toc-level-2
      color: $color-text
      font-size: .8rem
      >a.active,>a:hover
        font-size: .81rem
        transition: all 0.05s;

      &:before
        color: $color-accent-1
        content: "#"

    .toc-level-3
      color: $color-meta
      font-size: .75rem
      >a.active,>a:hover
        font-size: .76rem
        transition: all 0.05s;

    .toc-level-4
      display: none

    .toc-level-5
      display: none

    .toc-level-6
      display: none

    .toc-number
      display: none

@media screen and (min-width: 340px)
  #actions-footer
    a
      padding-left: 1rem !important
      &:first-child
        padding-left: 0 !important

@media screen and (min-width: 500px)
  #footer-post-container
    display: none
