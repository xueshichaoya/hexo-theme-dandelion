#search-box
  position: relative;
  height: auto;
  
  #search-input
    padding: .1rem .3rem .1rem 1.8rem!important;
    width: 100%
    outline: none
    border: solid 1px #333
    //border none
    border-radius: 5px
    background-color: #f6f6f6
    color: $color-text
    //font-size: 1.2rem
    -webkit-border-radius: 5px
    -moz-border-radius: 5px

    &:focus
      box-shadow: inset 0px 0px 0 1px #111
      //border: solid 2px #285a31
      & + svg
        .highlight.stroke.part1
          stroke #111
        .highlight.stroke.part2
          stroke #111
        .highlight.stroke.part3
          stroke #f60c3e
  svg.nav-icon
    height: 1.3rem;
    top: .37rem
    left: .3rem;
    position: absolute;
    fill: #333;

    *
      transition: all .1s cubic-bezier(0,.3,.8,1);
    .stroke
      fill: none;
      stroke: #333;
      stroke-width: 3;
      stroke-linejoin: round;
      stroke-linecap: round;

  &:hover svg
    transform: scale(1.1);
  //&:hover .highlight.stroke.part1
    //stroke: #23642e;
  //&:hover .highlight.stroke.part2
    //stroke: #23642e;
  &:hover .highlight.stroke.part3
    stroke: #f60c3e;

#search-result
  font-family: $font-family-mono
  background-color: #fff;
  box-shadow: 0px 1px 12px 0 rgba(0,0,0,.2);
  border-radius: 0 0 4px 4px;
  padding: 0 14px 0px;
  position: relative;
  top: -60px;

  ul.search-result-list
    padding: 0
    list-style-type: none

    li
      margin: 2em auto
      &:last-child
        padding-bottom: 1rem

  a.search-result-title
    background-image: none
    color: $color-text
    text-transform: capitalize
    font-weight: bold
    line-height: 1.2

  p.search-result
    overflow: hidden
    margin: .4em auto
    max-height: 13em
    text-align: justify
    font-size: .8em

  em.search-keyword
    border-bottom: 1px dashed $color-link
    color: $color-link
    font-weight: bold
    font-size: 1.1em
    font-style: normal

.search-no-result
  display: none
  padding-bottom: .5em
  color: $color-warning
  font-family: $font-family-mono

#search
  .widget
    margin 0