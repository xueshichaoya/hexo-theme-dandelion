article
  //text-shadow: 0px 0px 1px rgba(20, 20, 20, 0.1);
  line-height: 2
  header
      margin-top: 10px
      margin-bottom: 40px
    .posttitle
      margin-top: 0
      margin-bottom: 0
      text-transform: none
      font-size: 1.75rem
      line-height: 1.25
      font-family: $font-family-post-title
      font-weight: normal
      text-align: center
      color #333
      //background: linear-gradient(to right,#333 , #333 );
      //-webkit-text-fill-color: transparent;
      background-clip: text;
      -webkit-background-clip: text;
      //text-shadow: 0px 0px 5px rgba(44, 115, 40, 0.1);

    .meta
      margin-top: .5em
      margin-bottom: 1rem
      text-align: center
      line-height: 1em
      

    .meta *
      color: $color-accent-3
      font-size: .875rem
      //vertical-align: middle

    .author
      //text-transform: uppercase
      letter-spacing: .01em
      font-weight: normal

    .postdate
      display: inline

    i.icon
      //vertical-align: middle;
      margin  0 -4px 0 4px
      position: relative; 
      top: .12em

  .content
    /*分类数字*/
    .category-list 
      span 
        &.category-list-count 
          display inline-block
          position relative
          top -5px
          right 0px
          color #45b358
          font-size 12px
          &:before 
            content "「"
          &:after 
            content "」"

    a
      font-family: $font-family-body

    h1,h2,h3,h4,h5,h6
      font-family: $font-family-body
      text-shadow none

    h2:before
      position: absolute
      top: -3px
      left: -1rem
      color: $color-accent-1
      content: "#"
      font-weight: bold
      font-size: 1.2rem

    img
    video
      display: block
      margin: auto
      max-width: 100%
      height: auto
      box-shadow: 0 12px 8px rgba(0, 0, 0, 0.02)
      border-radius 4px

    /* http://webdesignerwall.com/tutorials/css-elastic-videos */
    .video-container
      position: relative
      overflow: hidden
      padding-top: (9 / 16 * 100)% // 16:9 ratio
      height: 0

      iframe, object, embed
        position: absolute
        top: 0
        left: 0
        margin-top: 0
        width: 100%
        height: 100%

    blockquote
      margin: 1rem 0
      //padding: .5em 10px
      background: inherit
      color: $color-quote
      quotes: "\201C" "\201D" "\2018" "\2019"
      font-weight: normal

      p
        margin: 0

      &:before
        margin-right: .25em
        color: $color-quote
        content: "\201C"
        vertical-align: -.4em
        font-size: 2em
        line-height: .1em

      footer
        margin: line-height 0
        color: $color-meta
        font-size: 11px

        a
          background-image: linear-gradient(transparent, transparent 5px, $color-meta 5px, $color-meta)
          color: $color-meta

        a:hover
          background-image: linear-gradient(transparent, transparent 4px, lighten($color-meta, 20%) 4px, lighten($color-meta, 20%))
          color: lighten($color-meta, 20%)

        cite
          &:before
            padding: 0 .5em
            content: "—"

    .pullquote
      margin: 0
      width: 45%
      text-align: left

      &.left
        margin-right: 1em
        margin-left: .5em

      &.right
        margin-right: .5em
        margin-left: 1em

    .caption
      position: relative
      display: inline-block
      margin-top: .5em
      color: color-grey
      text-align: center
      font-size: .9em
      box-shadow: none!important
      text-shadow: none 
      background: none 



  iframe
    max-width: 100%
.posttitle
  text-transform: none
  font-size: 1.5em
  line-height: 1.25


.post-announce 
    border-left: 2px solid #ccc;
    padding: 0px 10px;
    margin-top: 1rem

.post-prev-next 
  display: flex;
  width: 100%;
  font-size: 0;
  font-weight: 700;
  margin-top: 4rem
  padding-top: 10px;
  border-top: 1px dashed #ddd;

  .post-prev
    flex: 1 0 0;
    overflow: hidden;
    padding-left: 20px
    position relative
    i
      position: absolute;
      left: 0;
      top: .5em;

  .post-next
    flex: 1 0 0;
    overflow: hidden;
    text-align: right;
    padding-right: 20px
    position relative
    i
      position: absolute;
      right: 0;
      top: .5em;
  a
    font-size: 14px;
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #666;
    text-decoration: none
    box-shadow: none
    cursor: pointer;
    transition: color .3s;
    text-decoration: none;
    i 
      margin 0px 5px


.article-tag,.article-tag-end
  display inline
  .tag-link
    &:before
      content: "#"
      color: rgb(69, 179, 88);
      font-weight: 700;
      margin: 0 .1em 0 0;

    //underline(10px, $color-link)

.article-tag-end
  margin-top: 1rem
  display block
  i.icon
    margin: 0 0px 0 -4px;

#recommend-read-ul
  margin-top: 0
  padding-left: 2rem

article
  ul,ol
    padding-left: 2rem
    li
      p
        margin 0 0px 2em!important

#recommend-read,#post-comments
  h2
    margin-left: 0px!important
    i
      margin: 0 4px 0 -4px

#post-comments
  h2:before
    content:none

.lg-outer .lg-thumb-item.active, .lg-outer .lg-thumb-item:hover
  border 3px solid #45b358!important
.lg-outer .lg-thumb-item
  border none!important

.lg-progress-bar
  background-color: #ccc!important
  height 3px!important
.lg-progress-bar .lg-progress
  background-color: #45b358!important
  height 3px!important

.gallery-item
  display: block;
  text-align: center;
  box-shadow: none!important
  margin:  1rem 0
  .img-describe
    text-align: center;
    font-size: 0.8em;
    font-style: italic
    color: #aaaaaa
    border-bottom:  1px solid rgba(0, 0, 0, 0.07)
    padding .4rem 0 0 0

@media (min-width: 480px)
  .article-tag
    display: inline

    &:before
      content: "|"


.cover-header
  //background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2))
  background-position: center;
  background-size: cover;
  padding: 0;
  height: 220px;
  margin-left: -16px;
  margin-right: -16px;
  margin-top: -72px;
  position: relative;
  

  .post-header
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 90%;
  
  *
    text-align: center

  .white
    *
      color: #fff!important

  .dark
    *
      color: #000!important

@media (min-width: 500px)
  .cover-header
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 0px;
    height: 350px;