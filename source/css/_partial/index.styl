#writing
  .post-list
    margin-left: 0
    margin-top: 24px
    .post-item
      margin 0 0 24px 0
      padding 0 0 24px 0
      border-bottom: 1px dashed rgba(179, 197, 171, 0.25)
      display flex

      .post-item-inner
        //width: 196px;
        //margin-left: 24px;

      .post-item-cover
        &:before
          content: '';
          position: absolute;
          display: block;
          width: 100%;
          height: 100%;
          top: 0;
          left: 2;
          z-index: 1;
          background-color: transparent;
          transition: background .3s;
        width: 196px;
        min-width: 196px;
        max-width: 196px;
        max-height: 150px
        margin-left: 24px;
        display block
        position: relative;
        overflow: hidden;
        border-radius: 4px;
        a.img-link
          //opacity: 0;
          width: 100%;
          height: 100%;
          display: block;
          z-index: 2;
          font-size: 28px;
          transition: transform .3s,opacity .3s;
        img
          width: 196px;
          height: 100%;
          object-fit: cover;
          border-radius: 4px;

      .post-item-cover:hover
        &:before
          background-color: rgba(0,0,0,.2);
        img
          transform: scale(1.1,1.1)
          transition: transform .4s linear
          border-radius 4px

      .item-excerpt-cover
        &:before
          content: '';
          position: absolute;
          display: block;
          width: 100%;
          height: 100%;
          top: 0;
          left: 2;
          z-index: 1;
          background-color: transparent;
          transition: background .3s;
        //min-width: 90px;
        //max-width: 120px
        width 120px
        min-width: 120px;
        max-width: 120px;
        height 100px
        margin-left: 7px;
        float right 
        display none
        position: relative;
        overflow: hidden;
        border-radius: 4px;
        a.img-link
          //opacity: 0;
          width: 100%;
          height: 100%;
          display: block;
          z-index: 2;
          font-size: 28px;
          transition: transform .3s,opacity .3s;
        img
          width: 120px
          height: 100%;
          object-fit: cover;
          border-radius: 4px;
          
      .item-excerpt-cover:hover
        &:before
          background-color: rgba(0,0,0,.2);
        img
          transform: scale(1.1,1.1)
          transition: transform .4s linear
          border-radius 4px

  .h2
    &:before
      position: absolute;
      top: -4px;
      left: -1rem;
      color: #45b358;
      content: "#";
      font-weight: bold;
      font-size: 1.2rem;

@media only screen and (max-width: 600px)
  #writing
    .post-list
      .post-item
        .post-item-cover
          display: none
        .item-excerpt-cover
            display block



