#about 
  //white-space pre-wrap
  //margin-bottom: 20px
  font-family: $font-family-about
  font-size: 1.02em
  overflow hidden
  show hidden
  visibility hidden
  display: none
  p
    margin: 3px  0px 7px 1rem
    display inline
    max-width: calc(100vw - 4rem - 5px);
    text-indent: 1em;

  
  .t-caret
    background-color: #333
    width 2px
    display: inline-block
    height 1rem
    text-align: center
    vertical-align: middle

  .fab,.fas
    display: inline !important

#search
  margin-top: 20px
  margin-bottom: 20px;

#search-input
  font-family: $font-family-body 
  font-size: 0.875rem;
  //margin-top: 20px

.post-list
  padding: 0

  .post-item
    margin: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: none
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 14px
      i.icon
        vertical-align: middle;
        margin  0 -4px 0 4px
        position: relative;
        top: .1em;
      time
        vertical-align: middle;


    .item-title
      line-height: 1em!important
      font-size: 1.15rem
      position relative
      font-family: $font-family-post-title
      //font-weight: bold
      *
        line-height: 1em!important
      a
        background: none
        box-shadow: none
        transition: all .3s;
        color: #161616
        &:hover
          color: #000
          box-shadow: 0 2px 0 $color-accent-1
          transition: all .3s;
      a:before
        content none!important
      a:hover
        //font-size: 1.16rem
        color #000
        transition: all 0.05s;
      span
        vertical-align: top;
        font-size: 1.2rem;
        margin: .2em auto 0;
        font-weight: 700;
        font-family: $font-family-small
        display: block;
        letter-spacing: 0;
        -moz-font-feature-settings: 'tnum';
        -webkit-font-feature-settings: 'tnum';
        font-feature-settings: 'tnum';
        position: absolute;
        left: -2.3em;
        top: -.15em;
        &:before
          content: "â„–";
          margin: 0 .1em 0 0;
          vertical-align: top;
        @media screen and (max-width: 900px)
 
          display: block;
          vertical-align: baseline;
          font-size: .75em;
          position: static;

    .item-meta
      font-family: $font-family-small
      line-height: 1em!important
      margin  10px 0px 0px 0px
      display flex
      justify-content: space-between
      *
        line-height: 1em!important
        color: #8c8c8c!important
        font-size: 0.875rem!important
      a:before
        //background-color:  #8c8c8c!important
      i.icon
        //vertical-align: middle;
        margin  0 -4px 0 0px
        position: relative;
        top: .12em;

      .article-tag:before
        content none

      a.tag-link:before
        content: "#"
        color: #45b358
        font-weight: 700
        margin: 0 0.1em 0 0
        background-color: none 
        position: inherit
      a.tag-link:hover
        //font-size: 0.9rem !important;
        //color #000
        transition: all 0.05s;
    .item-excerpt
      br
          display none!important
        
      a.item-readmore
        border: none;
        display: inline-flex;
        font-weight: 700;
        align-items: center;
        font-size: .85em;
        padding: .05em .3em 0 .4em;
        background: rgba(228, 226, 226, 0.46)!important
        //color: #333
        line-height: 1.75
        &:before
          content:none!important

        &:hover
          color: #fff
          border: none
          background: #000!important

      p
        margin:14px 0 0 0
      

@media (min-width: 480px)
  .post-list
    .post-item
      //display: flex
      margin-bottom: 5px

      .meta
        text-align: left
        display: inline-block
      
      .post-excerpt
