// Code
@import "_highlight/" + $highlight

pre
  overflow-x: auto
  padding: 10px 15px
  padding-bottom: 0
  border: 1px dotted $color-border
  border-radius: 4px
  font-size: 13.5px
  font-family: $font-family-mono
  line-height: 22px
  -webkit-border-radius: 4px

  code
    display: block
    padding: 0
    border: none

code
  padding: 2px
  margin: 2px
  //border: 1px dotted $color-border
  border-radius: 3px
  -webkit-border-radius: 3px
  color #142e4c
  background-color: rgba(212,212,212,0.26);
  font-size: 0.85rem;
  font-family: $font-family-body

.highlight
  overflow-x: auto
  margin: 1rem 0
  padding: 10px 15px 10px 10px
  border-radius: 4px
  background: $color-background-code
  font-family: $font-family-mono
  // color: $color-accent-3
  -webkit-border-radius: 4px
  //box-shadow: 0 1px 5px rgba(0, 0, 0, 0.12)

  figcaption
    margin: -5px 0 5px
    color: $color-meta-code
    font-size: .9em
    zoom: 1

    a
      float: right
      color: $color-meta-code
      font-style: italic
      font-size: .8em

      underline(10px, $color-link)

    a:hover
      color: lighten($color-meta-code, 20%)

    &:before, content: ""
      display: table

    &:after
      clear: both

  pre
    padding: 0
    border: none
    background: none

  table
    width: auto

  td.gutter
    text-align: right

    pre
      border-right: 1px dashed #3333337d;
      border-radius: 0px
      padding-right: 7px

  .line
    height: 22px


.block-explore-title
  margin-left: 1rem
  margin-right: 1rem
  border-bottom: 1px solid #e8e8e8;

.block-explore-title-header
  display: inline-block!important
  margin-top: 0!important
  margin-bottom: -1px!important
  margin-left 0!important
  border-bottom: 1px solid #262626!important

.widget.tagcloud>ul
  padding-left: 1rem;
