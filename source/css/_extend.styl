$base-style
  h1, .h1
    display: block
    margin-top: 28px
    margin-bottom: 7px
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5em

    antialias()

  h2, .h2
    position: relative
    display: block
    margin-top: 1.25rem
    margin-bottom: .5rem
    color: $color-dark1
    text-transform: none
    letter-spacing: normal
    font-weight: bold
    font-size: 1.2em
    margin-left: 15px
    text-shadow: 1.5px 2px 0 rgba(228,228,228,0.769)

  h3
    color: $color-dark1
    //text-decoration: underline
    text-decoration: none
    font-weight: bold
    font-size: .9rem

  h4
  h5
  h6
    display: inline
    border-bottom: 1px dashed $color-dark1
    color: $color-dark1
    text-decoration: none
    font-weight: normal
    font-size: .9rem

  h3
  h4
  h5
  h6
    margin-top: .9rem
    margin-bottom: .315rem

  hr
    border: 1px dashed $color-accent-3

  strong
    font-weight: bold

  em
  cite
    font-style: italic

  sup
  sub
    position: relative
    vertical-align: baseline
    font-size: .75em
    line-height: 0

  sup
    top: -.5em

  sub
    bottom: -.2em

  small
    font-size: .85em

  acronym
  abbr
    border-bottom: 1px dotted

  ul
  ol
  dl
    line-height: $line-height
    margin 0

  ul
  ol
    ul
    ol
      margin-top: 0
      margin-bottom: 0

  ol
    list-style: decimal

  dt
    font-weight: bold

  table
    width: 100%
    border-collapse: collapse
    text-align: left
    font-size: $font-size - 2px

  th
    padding: 8px
    border-bottom: 1px dashed $color-code-border
    color: $color-accent-2
    font-weight: bold
    font-size: $font-size - 1px

  td
    padding: 9px 8px 0
    border-bottom: none
